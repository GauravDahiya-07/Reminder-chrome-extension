{
  "manifest_version": 3,
  "name": "Reminder Extension",
  "version": "1.0",
  "description": "Set reminders and get notified",
  "permissions": ["alarms", "notifications", "tts"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "16": "icon.png", "48": "icon.png", "128": "icon.png" }
  }
}
